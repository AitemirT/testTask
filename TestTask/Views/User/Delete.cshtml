@model TestTask.Models.User

@{
    ViewData["Title"] = "Удаление";
}

<h1 class="my-4">Удаление пользователя</h1>

<div>
    <p><strong>Почта:</strong> @Model.Email</p>
    <p><strong>Дата рождения:</strong> @Model.DateOfBirth</p>
    <h4>Номера телефонов:</h4>
    <ul>
        @foreach (Phone phone in Model.Phones)
        {
            <li>@phone.PhoneNumber</li>
        }
    </ul>
    <form asp-action="Delete" asp-controller="User" method="post">
        <input type="hidden" name="id" value="@Model.Id"/>
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>