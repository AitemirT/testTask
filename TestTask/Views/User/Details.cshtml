@model TestTask.Models.User

@{
    ViewData["Title"] = "Детали";
}

<h1 class="my-4">Детали пользователя</h1>

<div class="mb-3">
    <h3>Имя: @Model.UserName</h3>
    <p><strong>Почта:</strong> @Model.Email</p>
    <p><strong>Дата рождения:</strong> @Model.DateOfBirth</p>
    @if (Model.Phones.Count != 0 || !Model.Phones.Any())
    {
        <h4>Номера телефонов:</h4>
        <ul>
            @foreach (Phone phone in Model.Phones)
            {
                <li>@phone.PhoneNumber</li>
            }
        </ul>
    }
    else
    {
        <p>Пока что нет номеров телефонов</p>
    }
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>