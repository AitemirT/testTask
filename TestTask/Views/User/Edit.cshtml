@model TestTask.ViewModels.EditViewModel
@{
    ViewData["Title"] = "Edit profile";
}
<h4 class="text-center">Редактирование</h4>
<div class="row">
    <div class="card border-2">
        <div class="card-body d-flex justify-content-center">
            <div class="col-md-4">
                <form method="post" asp-action="Edit" asp-controller="User" asp-anti-forgery="true">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div>
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Введите имя пользователя</label><br/>
                            <input type="text" asp-for="Username" class="form-control"/><br/>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Введите Email</label><br/>
                            <input type="email" asp-for="Email" class="form-control"/><br/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">Введите дату</label><br/>
                            <input type="date" asp-for="DateOfBirth" class="form-control"/><br/>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        
                        <div class="py-3 d-flex justify-content-center">
                            <input type="submit" value="Сохранить" class="btn btn-outline-primary"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}