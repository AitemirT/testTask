@model TestTask.Models.Phone

@{
    ViewData["Title"] = "Details";
}
<div>
    <h4>Phone</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Номер телефона
        </dt>
        <dd class = "col-sm-10">
            @Model.PhoneNumber
