@model TestTask.Models.Phone

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Номер телефона
        </dt>
        <dd class = "col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class = "col-sm-2">
            Пользователь
        </dt>
        <dd class = "col-sm-10">
            @Model.User.UserName
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
